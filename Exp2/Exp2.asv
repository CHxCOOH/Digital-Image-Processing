% 读入图像
mandi = imread('mandi.tif');

% 添加高斯噪声
mandi_noise = imnoise(mandi,'gaussian',0,0.01);
imwrite(mandi_noise, 'mandi_noise.png');  % 写入添加高斯噪声后的图像到文件

% 展示图像
figure,
subplot(1,2,1),
imshow(mandi),title('mandi');

subplot(1,2,2),
imshow(mandi_noise),title('mandi_noise');

